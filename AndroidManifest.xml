<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.darshancomputing.BatteryIndicator"
          android:versionCode="011075"
          android:versionName="7.0.6-diagnostic"
>
  <application android:label="@string/diagnostic_full_name"
               android:icon="@drawable/battery"
               android:hardwareAccelerated="true"
  >
    <activity android:name=".BatteryIndicator"
              android:label="@string/diagnostic_full_name"
              android:theme="@style/bi_theme"
              android:screenOrientation="unspecified"
              android:stateNotNeeded="true"
              android:launchMode="singleTask"
	      android:excludeFromRecents="true"
    >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".SettingsActivity"
              android:label="@string/settings_activity_name_free"
	      android:excludeFromRecents="true"
    />

    <activity android:name=".SettingsHelpActivity"
              android:label="@string/settings_help_activity_name_free"
              android:theme="@style/bi_help_theme"
              android:stateNotNeeded="true"
	      android:excludeFromRecents="true"
    />

    <activity android:name=".HelpActivity"
              android:label="@string/help_activity_name_free"
              android:theme="@style/bi_help_theme"
              android:stateNotNeeded="true"
	      android:excludeFromRecents="true"
    />

    <service android:name=".BatteryIndicatorService" />

    <receiver android:name=".BootCompletedReceiver"
              android:enabled="true"
              android:exported="false"
              android:label="BootCompletedReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.PACKAGE_REPLACED" />
        <data android:scheme="package" android:path="com.darshancomputing.BatteryIndicator" />
      </intent-filter>
    </receiver>
  </application>

  <uses-sdk android:minSdkVersion="7"
            android:targetSdkVersion="14"
  />

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

  <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

  <supports-screens
      android:smallScreens="true"
      android:normalScreens="true"
      android:largeScreens="true"
      android:anyDensity="true"
  />
</manifest>
