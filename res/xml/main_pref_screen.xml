<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <Preference
     android:title="@string/pref_hint"
     android:layout="@layout/hint"
     android:enabled="false"
     android:selectable="false"
  />

  <PreferenceCategory android:title="@string/pref_cat_temperature_unit">
    <CheckBoxPreference
       android:key="convert_to_fahrenheit"
       android:title="@string/pref_convert_to_fahrenheit"
       android:defaultValue="false"
    />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_cat_themes">
    <ListPreference
       android:key="icon_set"
       android:title="@string/pref_icon_set"
       android:entries="@array/icon_set_entries"
       android:entryValues="@array/icon_set_values"
    />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_cat_charge_as_text">
    <CheckBoxPreference
       android:key="charge_as_text"
       android:title="@string/pref_charge_as_text"
       android:summary="@string/pref_charge_as_text_summary"
       android:defaultValue="false"
    />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_cat_one_percent_hack">
    <CheckBoxPreference
       android:key="one_percent_hack"
       android:title="@string/pref_one_percent_hack"
       android:summary="@string/pref_one_percent_hack_summary"
       android:defaultValue="false"
       android:enabled="false"
    />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_cat_more_settings_in_pro">
    <Preference
       android:summary="@string/pref_please_upgrade"
       android:layout="@layout/pro_pref"
       android:enabled="false"
    />
  </PreferenceCategory>

</PreferenceScreen>
